<!doctype html>
<html lang="en">

<head>
    <%- include('partials/header') %>
</head>

<body class="vertical  light  ">
    <div class="wrapper">
        <%- include('partials/navbar') %>
        <%- include('partials/sidebar') %>
        <main role="main" class="main-content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <h2 class="mb-2 page-title">Add New Team</h2>
                        <div class="row my-4">
                            <div class="col-md-12">
                                <div class="card shadow mb-4">
                                    <div class="card-header">
                                        <a href="/teams" class="btn btn-sm mb-2 btn-danger"><span
                                                class="fe fe-arrow-left fe-16 mr-2"></span>Back</a>
                                    </div>
                                    <div class="card-body">
                                        <form class="needs-validation" novalidate>
                                            <div class="form-row">
                                                <div class="col-md-12 mb-3">
                                                    <label for="name">Name</label>
                                                    <input type="text" class="form-control" placeholder="Name" id="name"
                                                        required>
                                                    <div class="invalid-feedback"> Please use a valid
                                                        name</div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-12 mb-3">
                                                    <label for="id_card">ID Card</label>
                                                    <input type="text" class="form-control" placeholder="ID Card"
                                                        id="id_card" required>
                                                    <div class="invalid-feedback"> Please use a valid
                                                        id card</div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-12 mb-3">
                                                    <label for="email">Email</label>
                                                    <input type="email" class="form-control" placeholder="Email"
                                                        id="email" required>
                                                    <div class="invalid-feedback"> Please use a valid
                                                        email</div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-12 mb-3">
                                                    <p>Avatar (optional)</p>
                                                    <img id="image" class="d-none mb-3" src="" alt="your image"
                                                        style="max-width:600px;" />
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" id="avatar"
                                                            onchange="readURL(this);">
                                                        <label class="custom-file-label" for="avatar">Choose
                                                            file...</label>
                                                        <div class="invalid-feedback">Please choose a valid
                                                            file</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-12 mb-3">
                                                    <label for="role">Role</label>
                                                    <input type="text" class="form-control" placeholder="Role" id="role"
                                                        required>
                                                    <div class="invalid-feedback"> Please use a valid
                                                        role</div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-12 mb-3">
                                                    <label for="gender">Gender</label>
                                                    <select class="form-control select2" id="gender" required>
                                                        <option value="">Select gender</option>
                                                        <option value="L">Man</option>
                                                        <option value="P">Woman</option>
                                                    </select>
                                                    <div class="invalid-feedback"> Please select a valid gender.</div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-12 mb-3">
                                                    <label for="address">Address</label>
                                                    <textarea class="form-control" id="address" placeholder="Address"
                                                        required rows="3"></textarea>
                                                    <div class="invalid-feedback"> Please enter a
                                                        address in the textarea. </div>
                                                </div>
                                            </div>
                                            <button type="submit"
                                                class="btn mt-3 mb-2 btn-success text-white float-right">Save</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- .col-12 -->
            </div> <!-- .row -->
    </div> <!-- .container-fluid -->
    </main> <!-- main -->
    </div> <!-- .wrapper -->
    <%- include('partials/footer') %>
    <script>
        $(document).ready(function () {
            // select2
            $('.select2').select2({
                theme: 'bootstrap4',
                width: '100%',
            });

            // Preview image
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#image').removeClass("d-none");
                        $('#image')
                            .attr('src', e.target.result);
                    };

                    reader.readAsDataURL(input.files[0]);
                }
            }

            // Form validation
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    var forms = document.getElementsByClassName('needs-validation');
                    // Loop over them and prevent submission
                    var validation = Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();

            // Add Team
            $('.needs-validation').on('submit', function (e) {
                e.preventDefault();
                const data = {
                    name: $('#name').val(),
                    id_card: $('#id_card').val(),
                    email: $('#email').val(),
                    avatar: '',
                    role: $('#role').val(),
                    gender: $('#gender').val(),
                    address: $('#address').val(),
                }
                axios.post('http://localhost:8080/api/teams', data)
                    .then(function (response) {
                        // console.log(response);
                        if (response.status == 200) {
                            $('#teamModal').modal('hide');
                            Swal.fire(
                                'Sucessfully!',
                                'Team has been added.',
                                'success'
                            ).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = '/teams';
                                }
                            })
                        }
                    })
                    .catch(function (error) {
                        console.log(error);
                    });
            });
        });

    </script>
    <!-- App JS -->
    <script src="static/js/apps.js"></script>
</body>

</html>
