<!doctype html>
<html lang="en">

<head>
    <%- include('partials/header') %>
</head>

<body class="vertical  light  ">
    <div class="wrapper">
        <%- include('partials/navbar') %>
        <%- include('partials/sidebar') %>
        <main role="main" class="main-content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <h2 class="mb-2 page-title">Teams</h2>
                        <div class="row my-4">
                            <div class="col-md-12">
                                <div class="card shadow">
                                    <div class="card-header">
                                        <a href="/teams-create" class="btn mb-2 btn-primary"><span
                                                class="fe fe-plus fe-16 mr-2"></span>Add
                                            New Team</a>
                                    </div>

                                    <div class="card-body">
                                        <!-- table -->
                                        <table class="table datatables" id="teamsDataTable">
                                            <thead>
                                                <tr>
                                                    <th>No.</th>
                                                    <th>Name</th>
                                                    <th>ID Card</th>
                                                    <th>Email</th>
                                                    <th>Gender</th>
                                                    <th>Address</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% teams.forEach(function(team, index) { %>
                                                <tr>
                                                    <td><%= index += 1 %></td>
                                                    <td><%= team.name %></td>
                                                    <td><%= team.id_card %></td>
                                                    <td><%= team.email %></td>
                                                    <td><%= team.gender %></td>
                                                    <td><%= team.address %></td>
                                                    <td>
                                                        <!-- <a style="cursor: pointer;">
                                                            <i class="fe fe-eye text-primary fe-16 mx-1"></i>
                                                        </a> -->
                                                        <a class="edit" data-id="<%= team.id %>"
                                                            style="cursor: pointer;">
                                                            <i class="fe fe-edit text-warning fe-16 mx-1"></i>
                                                        </a>
                                                        <a class="delete" data-id="<%= team.id %>"
                                                            style="cursor: pointer;">
                                                            <i class="fe fe-trash-2 text-danger fe-16 mx-1"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- .col-12 -->
                </div> <!-- .row -->
            </div> <!-- .container-fluid -->
            <!-- Modal -->
            <div class="modal fade" id="teamModal" tabindex="-1" role="dialog" aria-labelledby="teamModalTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="teamModalTitle"></h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form class="needs-validation" novalidate>
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control" placeholder="Name" id="name" required>
                                        <div class="invalid-feedback"> Please use a valid
                                            name</div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <label for="id_card">ID Card</label>
                                        <input type="text" class="form-control" placeholder="ID Card" id="id_card"
                                            required>
                                        <div class="invalid-feedback"> Please use a valid
                                            id card</div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" placeholder="Email" id="email"
                                            required>
                                        <div class="invalid-feedback"> Please use a valid
                                            email</div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <p>Avatar (optional)</p>
                                        <img id="image" class="d-none mb-3" src="" alt="avatar"
                                            style="max-width:600px;" />
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="avatar"
                                                onchange="readURL(this);">
                                            <label class="custom-file-label" for="avatar">Choose
                                                file...</label>
                                            <div class="invalid-feedback">Please choose a valid
                                                file</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <label for="role">Role</label>
                                        <input type="text" class="form-control" placeholder="Role" id="role" required>
                                        <div class="invalid-feedback"> Please use a valid
                                            role</div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12 mb-3">
                                        <label for="gender">Gender</label>
                                        <select class="form-control select2" id="gender" required>
                                            <option value="">Select gender</option>
                                            <option value="L">Man</option>
                                            <option value="P">Woman</option>
                                        </select>
                                        <div class="invalid-feedback"> Please select a valid gender.</div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <label for="address">Address</label>
                                        <textarea class="form-control" id="address" placeholder="Address" required
                                            rows="3"></textarea>
                                        <div class="invalid-feedback"> Please enter a
                                            address in the textarea. </div>
                                    </div>
                                </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn mb-2 btn-success text-white">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main> <!-- main -->
    </div> <!-- .wrapper -->
    <%- include('partials/footer') %>
    <script>
        $(document).ready(function () {
            // DataTables
            $('#teamsDataTable').DataTable({
                autoWidth: true,
            });

            // Preview image
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#image').removeClass("d-none");
                        $('#image')
                            .attr('src', e.target.result);
                    };

                    reader.readAsDataURL(input.files[0]);
                }
            }

            // Form validation
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    var forms = document.getElementsByClassName('needs-validation');
                    // Loop over them and prevent submission
                    var validation = Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();

            // Edit team
            $('.edit').click(function () {
                const id = $(this).data('id');

                axios.get(`https://tesla-backend-rest-server-production.up.railway.app/api/teams/${id}`)
                    .then(function (response) {
                        // console.log(response);
                        $('#name').val(response.data.name);
                        $('#id_card').val(response.data.id_card);
                        $('#email').val(response.data.email);
                        $('#role').val(response.data.role);
                        $("#gender").val(response.data.gender).change();
                        $('#address').val(response.data.address);

                        $('#teamModalTitle').html('Edit Team');
                        $('#teamModal').modal('show');
                    })
                    .catch(function (error) {
                        console.log(error);
                    });

                $('.needs-validation').on('submit', function (e) {
                    e.preventDefault();
                    const data = {
                        name: $('#name').val(),
                        id_card: $('#id_card').val(),
                        email: $('#email').val(),
                        avatar: '',
                        role: $('#role').val(),
                        gender: $('#gender').val(),
                        address: $('#address').val(),
                    }
                    axios.put(
                            `https://tesla-backend-rest-server-production.up.railway.app/api/teams/${id}`,
                            data)
                        .then(function (response) {
                            // console.log(response);
                            if (response.status == 200) {
                                $('#teamModal').modal('hide');
                                Swal.fire(
                                    'Sucessfully!',
                                    'Team has been updated.',
                                    'success'
                                ).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.reload();
                                    }
                                })
                            }
                        })
                        .catch(function (error) {
                            console.log(error);
                        });
                });
            });

            // Delete Team
            $('.delete').click(function () {
                const id = $(this).data('id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        axios.delete(
                                `https://tesla-backend-rest-server-production.up.railway.app/api/teams/${id}`
                                )
                            .then(() => {
                                Swal.fire(
                                        'Deleted!',
                                        'Team has been deleted.',
                                        'success'
                                    )
                                    .then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.reload();
                                        }
                                    })
                            });
                    }
                });
            });
        });

    </script>
    <!-- App JS -->
    <script src="static/js/apps.js"></script>
</body>

</html>
